extends content-layout

include _include/sharedHTMLFunctions

block main_content
  each m in Ms
    .card 
      .card-block 
        h4 
          a(href='/m')= m.a1 
          small &nbsp;
            +outputRating(m.a2) 
          span.badge.badge-pill.badge-default.float-right= m.a3 
        p.address= m.a4
        .facilities 
          each facility in m.facilities 
            span.badge.badge-pill= facility
  